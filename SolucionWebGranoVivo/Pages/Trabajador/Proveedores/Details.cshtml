@page "{id:int}"
@model SolucionWebGranoVivo.Pages.Trabajador.Proveedores.DetailsModel

@{
    ViewData["Title"] = "Detalles del Proveedor";
}

<h1>Detalles del Proveedor</h1>

<div>
    <h4>Proveedor</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Codigo</dt>
        <dd class="col-sm-10">@Model.Proveedor.Codigo</dd>
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Proveedor.Nombre</dd>

        <dt class="col-sm-2">Dirección</dt>
        <dd class="col-sm-10">@Model.Proveedor.Direccion</dd>

        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.Proveedor.Telefono</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Proveedor.Email</dd>
    </dl>
</div>

<div>
    <a asp-page="./Index" class="btn btn-secondary">Volver a la lista</a>
</div>
