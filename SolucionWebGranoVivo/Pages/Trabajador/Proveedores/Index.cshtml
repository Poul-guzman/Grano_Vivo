@page
@model SolucionWebGranoVivo.Pages.Trabajador.Proveedores.IndexModel

@{
    ViewData["Title"] = "Proveedores";
    Layout = "_Layout";
}

<h1>Lista de Proveedores</h1>
<div class="mb-3">
    <a asp-page="/Trabajador/Productos/Index" class="btn btn-outline-secondary me-2">
        <i class="fas fa-box"></i> Ver Productos
    </a>
    <a asp-page="/Trabajador/Clientes/Index" class="btn btn-outline-secondary">
        <i class="fas fa-users"></i> Ver Clientes
    </a>
</div>

@if (Model.Proveedor == null || !Model.Proveedor.Any())
{
    <div class="alert alert-info">No hay proveedores registrados actualmente.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Email</th>
                <th>Detalles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Proveedor)
            {
                <tr>
                    <td>@item.Codigo</td>
                    <td>@item.Nombre</td>
                    <td>@item.Direccion</td>
                    <td>@item.Telefono</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.Id"
                           class="btn btn-sm btn-info">Ver</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
