@page
@model SolucionWebGranoVivo.Pages.Trabajador.Clientes.IndexModel
@{
    ViewData["Title"] = "Clientes";
    Layout = "_Layout";
}

<h1>Lista de Clientes</h1>

<div class="mb-3">
<a asp-page="/Trabajador/Productos/Index" class="btn btn-outline-secondary me-2">
    <i class="fas fa-box"></i> Ver Productos
</a>
<a asp-page="/Trabajador/Proveedores/Index" class="btn btn-outline-secondary">
    <i class="fas fa-truck"></i> Ver Proveedores
</a>
</div>

@if (Model.Cliente == null || !Model.Cliente.Any())
{
    <div class="alert alert-info">No hay clientes registrados actualmente.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>RUC</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Email</th>
                <th>Detalles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cliente)
            {
                <tr>
                    <td>@item.Nombres</td>
                    <td>@item.Apellidos</td>
                    <td>@item.RUC</td>
                    <td>@item.Direccion</td>
                    <td>@item.Telefono</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.Id"
                           class="btn btn-sm btn-info">Ver</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
