@page
@model SolucionWebGranoVivo.Pages.Admin.Productos.IndexModel

@{
    ViewData["Title"] = "Productos";
    Layout = "_Layout";
}

<h1>Lista de Productos</h1>


<div class="mb-3">
    <a asp-page="Create" class="btn btn-primary me-2">Registrar nuevo producto</a>
    <a asp-page="/Admin/Clientes/Index" class="btn btn-outline-secondary me-2">
        <i class="fas fa-users"></i> Ver Clientes
    </a>
    <a asp-page="/Admin/Proveedores/Index" class="btn btn-outline-secondary">
        <i class="fas fa-truck"></i> Ver Proveedores
    </a>
</div>

@if (Model.Producto == null || !Model.Producto.Any())
{
    <div class="alert alert-info">
        No hay productos registrados actualmente.
    </div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Producto.First().Codigo)</th>
                <th>@Html.DisplayNameFor(model => model.Producto.First().Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Producto.First().Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.Producto.First().Precio)</th>
                <th>@Html.DisplayNameFor(model => model.Producto.First().Stock)</th>
                <th>@Html.DisplayNameFor(model => model.Producto.First().Peso)</th>
                <th>@Html.DisplayNameFor(model => model.Producto.First().TipoTueste)</th>
                <th>@Html.DisplayNameFor(model => model.Producto.First().Origen)</th>
                <th>@Html.DisplayNameFor(model => model.Producto.First().IdCategoria)</th>
                <th>Imagen</th>
                <th>@Html.DisplayNameFor(model => model.Producto.First().Estado)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Producto)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                    <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                    <td>@Html.DisplayFor(modelItem => item.Peso)</td>
                    <td>@Html.DisplayFor(modelItem => item.TipoTueste)</td>
                    <td>@Html.DisplayFor(modelItem => item.Origen)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdCategoria)</td>
                    <td>
                        <img src="@item.ImagenUrl" alt="@item.Nombre" style="width:100px; height:auto; object-fit:cover;" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
