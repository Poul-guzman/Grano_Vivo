@page
@model SolucionWebGranoVivo.Pages.Admin.Productos.EditModel

@{
    ViewData["Title"] = "Editar Producto";
}

<h1>Editar Producto</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Producto.Codigo"></label>
        <input asp-for="Producto.Codigo" class="form-control" />
        <span asp-validation-for="Producto.Codigo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.Nombre"></label>
        <input asp-for="Producto.Nombre" class="form-control" />
        <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.Descripcion"></label>
        <input asp-for="Producto.Descripcion" class="form-control" />
        <span asp-validation-for="Producto.Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.Precio"></label>
        <input asp-for="Producto.Precio" class="form-control" />
        <span asp-validation-for="Producto.Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.Stock"></label>
        <input asp-for="Producto.Stock" class="form-control" />
        <span asp-validation-for="Producto.Stock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.Peso"></label>
        <input asp-for="Producto.Peso" class="form-control" />
        <span asp-validation-for="Producto.Peso" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.TipoTueste"></label>
        <input asp-for="Producto.TipoTueste" class="form-control" />
        <span asp-validation-for="Producto.TipoTueste" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.Origen"></label>
        <input asp-for="Producto.Origen" class="form-control" />
        <span asp-validation-for="Producto.Origen" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.IdCategoria"></label>
        <input asp-for="Producto.IdCategoria" class="form-control" />
        <span asp-validation-for="Producto.IdCategoria" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.ImagenUrl"></label>
        <input asp-for="Producto.ImagenUrl" class="form-control" placeholder="/img/cafe01.png" />
        <span asp-validation-for="Producto.ImagenUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.Estado"></label>
        <input asp-for="Producto.Estado" class="form-control" />
        <span asp-validation-for="Producto.Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
</form>
