@page
@model SolucionWebGranoVivo.Pages.Admin.Productos.DetailsModel

@{
    ViewData["Title"] = "Detalles del Producto";
}

<h1>Detalles del Producto</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Código</dt>
        <dd class="col-sm-10">@Model.Producto.Codigo</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Producto.Nombre</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Producto.Descripcion</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Producto.Precio</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.Producto.Stock</dd>
    </dl>
</div>

<a asp-page="./Edit" asp-route-id="@Model.Producto.Id" class="btn btn-warning">Editar</a>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>
