@page
@model SolucionWebGranoVivo.Pages.Admin.Proveedores.IndexModel
@{
    ViewData["Title"] = "Proveedores";
    Layout = "_Layout";
}

<h1>Lista de Proveedores</h1>
<div class="mb-3">
    <a asp-page="Create" class="btn btn-primary me-2">Registrar nuevo proveedor</a>
    <a asp-page="/Admin/Productos/Index" class="btn btn-outline-secondary me-2">
        <i class="fas fa-box"></i> Ver Productos
    </a>
    <a asp-page="/Admin/Clientes/Index" class="btn btn-outline-secondary">
        <i class="fas fa-users"></i> Ver Clientes
    </a>
</div>


@if (Model.Proveedor == null || !Model.Proveedor.Any())
{
    <div class="alert alert-info">No hay proveedores registrados actualmente.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Proveedor.First().Codigo)</th>
                <th>@Html.DisplayNameFor(model => model.Proveedor.First().Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Proveedor.First().Direccion)</th>
                <th>@Html.DisplayNameFor(model => model.Proveedor.First().Telefono)</th>
                <th>@Html.DisplayNameFor(model => model.Proveedor.First().Email)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Proveedor)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
