@page
@model SolucionWebGranoVivo.Pages.Admin.GuiasEntrada.EditModel
@{
    ViewData["Title"] = "Editar Guía de Entrada";
}

<div class="container mt-4">
    <h2>Editar Guía de Entrada</h2>

    <form method="post">
        <div class="mb-3">
            <label class="form-label">Proveedor</label>
            <select asp-for="GuiaEntrada.ProveedorId" asp-items="Model.ProveedoresSelectList" class="form-select"></select>
        </div>

        <div class="mb-3">
            <label class="form-label">Responsable</label>
            <input asp-for="GuiaEntrada.Responsable" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Estado</label>
            <select asp-for="GuiaEntrada.Estado" class="form-select">
                <option>Pendiente</option>
                <option>Completado</option>
                <option>Anulado</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Observaciones</label>
            <textarea asp-for="GuiaEntrada.Observaciones" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-warning">Guardar Cambios</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
