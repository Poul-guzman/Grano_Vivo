@page "{id}"
@model SolucionWebGranoVivo.Pages.Admin.GuiasSalida.DeleteModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Eliminar Guía de Salida";
}

<h1>Eliminar Guía de Salida</h1>

<div class="alert alert-danger">
    <p>¿Está seguro que desea eliminar la guía <strong>@Model.GuiaSalida.IdGuiaSalida</strong> del cliente <strong>@Model.GuiaSalida.Cliente?.Nombres @Model.GuiaSalida.Cliente?.Apellidos</strong>?</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
