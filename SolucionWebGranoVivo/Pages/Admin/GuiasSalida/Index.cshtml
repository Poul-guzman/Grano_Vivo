@page
@model SolucionWebGranoVivo.Pages.Admin.GuiasSalida.IndexModel

@{
    ViewData["Title"] = "Guías de Salida";
    Layout = "_Layout";
}

<h1 class="mb-4">Guías de salida</h1>

<div class="mb-3">
    <a asp-page="Create" class="btn btn-primary me-2">Nueva guía</a>
</div>

@if (Model.Guias == null || !Model.Guias.Any())
{
    <div class="alert alert-info">
        No hay guías registradas.
    </div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID Guía</th>
                <th>Fecha</th>
                <th>Cliente</th>
                <th>Items</th>
                <th>Productos</th>
                <th>Observaciones</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Guias)
            {
                <tr>
                    <td>@item.IdGuiaSalida</td>
                    <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                    <td>@(item.Cliente?.Nombres + " " + item.Cliente?.Apellidos)</td>

                    
                    <td>@(item.Detalles?.Sum(d => d.Cantidad) ?? 0)</td>

                    
                    <td>
                        @if (item.Detalles != null && item.Detalles.Any())
                        {
                            <ul class="mb-0">
                                @foreach (var d in item.Detalles)
                                {
                                    <li>@d.Producto?.Nombre — @d.Cantidad</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <em>Sin productos</em>
                        }
                    </td>

                    <td>@item.Observaciones</td>

                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.IdGuiaSalida" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-page="./Delete" asp-route-id="@item.IdGuiaSalida" class="btn btn-sm btn-danger">Eliminar</a>
                        <a asp-page="./Details" asp-route-id="@item.IdGuiaSalida" class="btn btn-sm btn-info">Ver</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
