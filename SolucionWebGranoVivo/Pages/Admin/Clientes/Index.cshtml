@page
@model SolucionWebGranoVivo.Pages.Admin.Clientes.IndexModel
@{
    ViewData["Title"] = "Clientes";
    Layout = "_Layout";
}

<h1>Lista de Clientes</h1>
<div class="mb-3">
    <a asp-page="Create" class="btn btn-primary me-2">Registrar nuevo cliente</a>
    <a asp-page="/Admin/Productos/Index" class="btn btn-outline-secondary me-2">
        <i class="fas fa-box"></i> Ver Productos
    </a>
    <a asp-page="/Admin/Proveedores/Index" class="btn btn-outline-secondary">
        <i class="fas fa-truck"></i> Ver Proveedores
    </a>
</div>


@if (Model.Cliente == null || !Model.Cliente.Any())
{
    <div class="alert alert-info">No hay clientes registrados actualmente.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Cliente.First().Nombres)</th>
                <th>@Html.DisplayNameFor(model => model.Cliente.First().Apellidos)</th>
                <th>@Html.DisplayNameFor(model => model.Cliente.First().RUC)</th>
                <th>@Html.DisplayNameFor(model => model.Cliente.First().Direccion)</th>
                <th>@Html.DisplayNameFor(model => model.Cliente.First().Telefono)</th>
                <th>@Html.DisplayNameFor(model => model.Cliente.First().Email)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cliente)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
                    <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
                    <td>@Html.DisplayFor(modelItem => item.RUC)</td>
                    <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
