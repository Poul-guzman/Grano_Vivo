@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/login.css" />

<div class="contenedor-principal">
    
    <form method="post" class="login-panel">
        <h1>Bienvenido!</h1>

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <input asp-for="Input.Email" class="inputUsuario form-control" placeholder="Ingrese su usuario" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>

        <input asp-for="Input.Password" class="inputPassword form-control" placeholder="Ingrese su contraseña" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>

        <div class="form-check mb-3">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            <label class="form-check-label" asp-for="Input.RememberMe">
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>

        <button type="submit" class="iniciarsesion btn btn-primary w-100">Iniciar Sesión</button>

        <div class="mt-3">
            <p><a asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a></p>
            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse como nuevo usuario</a></p>
            <p><a asp-page="./ResendEmailConfirmation">Reenviar confirmación de correo</a></p>
        </div>
    </form>

    
    <div class="imagen-panel">
        <img src="~/img/imagenfondocafe3.jpg" alt="Imagen de fondo" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
